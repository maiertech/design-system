{
  "name": "@mdotasia/components",
  "version": "0.17.0",
  "description": "Reusable React components.",
  "homepage": "https://components.maier.asia",
  "bugs": "https://github.com/mdotasia/components/issues",
  "author": {
    "name": "Thilo Maier",
    "email": "git@maier.asia"
  },
  "repository": "git@github.com:mdotasia/components.git",
  "license": "MIT",
  "keywords": [
    "react",
    "components",
    "styleguide"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "scripts": {
    "start": "start-storybook -p 8000 -c config/storybook",
    "build": "rm -rf ./dist && babel ./src -d ./dist --ignore test.js,stories.jsx",
    "build-storybook": "rm -rf ./storybook-static && build-storybook -c config/storybook",
    "format": "pretty-quick",
    "inspect": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .jsx,.js --ignore-path .gitignore .",
    "prepublishOnly": "npm run build",
    "pretest": "rm -rf ./screenshots && rm -rf ./diff",
    "test": "JEST_PUPPETEER_CONFIG=config/jest/puppeteer.js jest --config config/jest/config.js",
    "watch": "npm run test --watch"
  },
  "dependencies": {
    "polished": "^2.0.3",
    "prop-types": "^15.6.0",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.0-8",
    "styled-components": "^4.0.0-beta.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@mdotasia/eslint-config": "^0.7.0",
    "@storybook/addon-knobs": "^5.0.10",
    "@storybook/addon-storysource": "^5.0.10",
    "@storybook/react": "^5.0.10",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.7.1",
    "babel-preset-react-app": "^8.0.0",
    "eslint": "^5.3.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.4.3",
    "jest-puppeteer": "^3.2.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.4.1",
    "puppeteer": "^1.5.0",
    "react": "^16.0.0",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.4.1",
    "shelljs": "^0.8.2"
  }
}
