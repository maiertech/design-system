{
  "name": "@mdotasia/components",
  "version": "0.0.7",
  "description": "Reusable React components.",
  "homepage": "https://github.com/mdotasia/components",
  "bugs": "https://github.com/mdotasia/components/issues",
  "author": {
    "name": "Thilo Maier",
    "email": "git@maier.asia"
  },
  "repository": "git@github.com:mdotasia/components.git",
  "license": "MIT",
  "keywords": ["react", "components"],
  "main": "dist/index.js",
  "files": ["dist"],
  "lint-staged": {
    "*.{js,jsx,json,css,md}": ["prettier --write", "git add"]
  },
  "scripts": {
    "styleguide": "styleguidist server",
    "styleguide:deploy": "styleguidist build && gh-pages -d styleguide",
    "prebuild": "rimraf ./dist",
    "build":
      "cross-env NODE_ENV=production babel ./src -d ./dist --ignore test.js",
    "format": "prettier --write \"src/**/*.{js,jsx,md}\"",
    "lint": "eslint src/**/*.{js,jsx}",
    "precommit": "lint-staged",
    "prepublish": "yarn run build",
    "release": "release",
    "postrelease": "yarn run build && yarn run styleguide:deploy",
    "start": "start-storybook -p 9001 -c .storybook",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "rebass": "^1.0.4",
    "styled-components": "^2.1.2",
    "styled-system": "^1.0.0-13"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-styled-components": "^1.5.0",
    "cross-env": "^5.1.3",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.1.0",
    "react-styleguidist": "^6.2.2",
    "release": "^3.1.5",
    "rimraf": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "babel": {
    "presets": ["react-app"],
    "plugins": ["styled-components"]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
