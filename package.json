{
  "name": "@mdotasia/components",
  "version": "0.19.0",
  "description": "Reusable React components.",
  "homepage": "https://components.maier.asia",
  "author": {
    "name": "Thilo Maier",
    "email": "git@maier.asia"
  },
  "repository": "https://github.com/454de6e/components/",
  "bugs": "https://github.com/mdotasia/components/issues",
  "license": "MIT",
  "keywords": [
    "react",
    "components"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "start-storybook -p 8000 -c config/storybook",
    "build": "rm -rf ./dist && cross-env NODE_ENV=production babel ./src -d ./dist --ignore 'test/**/*.test.js','src/**/*.stories.js'",
    "build-storybook": "rm -rf ./storybook-static && build-storybook -c config/storybook",
    "clean": "rm -rf ./node_modules",
    "inspect": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "prepublishOnly": "npm run build",
    "pretest": "rm -rf ./screenshots && rm -rf ./diff",
    "test": "JEST_PUPPETEER_CONFIG=config/jest/puppeteer.js jest --config config/jest/config.js",
    "watch": "npm run test --watch"
  },
  "lint-staged": {
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "dependencies": {
    "polished": "^2.0.3",
    "prop-types": "^15.6.0",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.0-8",
    "styled-components": "^4.0.0-beta.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-storysource": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "axios": "^0.19.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.7.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-shopify": "^28.0.0",
    "fs-extra": "^8.0.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-image-snapshot": "^2.8.2",
    "jest-puppeteer": "^4.2.0",
    "lint-staged": "^8.1.7",
    "now": "^15.3.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "puppeteer": "^1.17.0",
    "react": "^16.0.0",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.4.1",
    "release": "^6.0.1",
    "shelljs": "^0.8.2"
  }
}
