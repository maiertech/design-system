{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "12.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint"
    }
  },
  "scripts": {
    "dev": "yarn workspace @maiertech/components run dev",
    "build": "yarn workspace @maiertech/components run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "yarn run prettier --check",
    "prettier": "prettier . --ignore-path .gitignore",
    "format": "run-s format:*",
    "format:eslint": "yarn run lint:eslint --fix",
    "format:prettier": "yarn run prettier --write",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@maiertech/eslint-config": "^0.10.0",
    "@maiertech/prettier-config": "^0.1.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.7.1",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  }
}
