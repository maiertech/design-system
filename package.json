{
  "name": "@mdotasia/components",
  "version": "0.19.0",
  "description": "Reusable React components.",
  "homepage": "https://components.maier.asia",
  "author": {
    "name": "Thilo Maier",
    "email": "git@maier.asia"
  },
  "repository": "https://github.com/454de6e/components/",
  "bugs": "https://github.com/mdotasia/components/issues",
  "license": "MIT",
  "keywords": [
    "react",
    "components"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "start-storybook -p 8000 -c config/storybook",
    "prepublishOnly": "npm run build",
    "build": "rm -rf ./dist && cross-env NODE_ENV=production babel ./src -d ./dist --ignore 'test/**/*.test.js','src/**/*.stories.js'",
    "build-storybook": "rm -rf ./storybook-static && build-storybook -c config/storybook",
    "clean": "rm -rf ./node_modules",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "yarn run prettier --check",
    "prettier": "prettier . --ignore-path .gitignore",
    "format": "run-s format:*",
    "format:eslint": "yarn run lint:eslint --fix",
    "format:prettier": "yarn run prettier --write",
    "purge": "rm -rf ./node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint"
    }
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.1"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.0-8"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@maiertech/eslint-config": "^0.9.0",
    "@maiertech/prettier-config": "^0.1.1",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-storysource": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.7.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.1"
  }
}
