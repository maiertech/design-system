{
  "private": true,
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "engines": {
    "node": "12.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint"
    }
  },
  "scripts": {
    "dev": "yarn workspace @maiertech/components run dev",
    "prepare": "yarn workspaces run prepare",
    "build": "yarn workspace @maiertech/components run storybook-build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "yarn run prettier --check",
    "prettier": "prettier . --ignore-path .gitignore",
    "format": "run-s format:*",
    "format:eslint": "yarn run lint:eslint --fix",
    "format:prettier": "yarn run prettier --write",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-react": "7.9.4",
    "@maiertech/eslint-config": "0.10.0",
    "@maiertech/prettier-config": "0.2.0",
    "babel-loader": "8.1.0",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "microbundle": "0.12.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5"
  }
}
